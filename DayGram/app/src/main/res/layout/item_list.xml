<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/backgroudcolor">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/frame"
        android:weightSum="1">

        <TextView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:id="@+id/count_list"
            android:textColor="#696464"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            tools:targetApi="jelly_bean_mr1" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:id="@+id/num_list"
            android:layout_below="@+id/count_list"
            android:layout_alignLeft="@+id/count_list"
            android:layout_alignStart="@+id/count_list"
            android:layout_marginTop="7dp"
            android:textColor="#696464"
            android:textStyle="bold"
            android:typeface="serif"
            android:textAlignment="center"
            android:textSize="22sp"
            tools:targetApi="jelly_bean_mr1" />
        
        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/count_list"
            android:layout_toEndOf="@+id/count_list"
            android:layout_marginLeft="15dp"
            android:textColor="#696464"
            android:id="@+id/content_list" />

    </RelativeLayout>
</RelativeLayout>